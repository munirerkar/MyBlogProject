
@model List<ArticleDto>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Makale Yönetimi /</span> Makaleler
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <h5 class="card-header">Table basic</h5>
        <div class="table-responsive text-nowrap">
            <a class="btn btn-success" asp-area="Admin" asp-controller="Article" asp-action="Add">
                Makale Ekle <i class=""></i>
            </a>
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturma Tarihi</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach(var article in Model){
                       <tr name="@article.Id">
                           <td>@article.Title</td>
                           <td>@article.Category.Name</td>
                           <td>@article.CreatedDate.ToShortDateString()</td>
                           <td>@article.CreatedBy</td>
                           <td>@(article.IsDeleted ? "Aktif Değil":"Aktif")</td>
                           <td></td>
                       </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Basic Bootstrap Table -->


</div>

@section Scripts{
    <script src="~/js/articleIndex.js" type="application/ecmascript"></script>
}
    
